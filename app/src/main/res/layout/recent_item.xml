<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    android:elevation="0dp"
    android:outlineProvider="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/new_white"
        android:elevation="0dp"
        android:outlineProvider="none">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/article_recent_img"
            android:layout_width="185dp"
            android:layout_height="195dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/article_recent_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Article Title"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/article_recent_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:fontFamily="@font/poppinslight"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/article_recent_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created At"
                android:fontFamily="@font/poppinslight"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

<!--        <TextView-->
<!--            android:id="@+id/article_recent_content"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/poppinslight"-->
<!--            android:text="Article Content"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="15sp"-->
<!--            android:maxLines="2"-->
<!--            android:ellipsize="end"-->
<!--            android:layout_marginTop="5dp"/>-->

        <TextView
            android:id="@+id/article_recent_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UID"
            android:fontFamily="@font/poppinslight"
            android:textColor="@color/black"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
